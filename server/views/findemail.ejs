<% include top.ejs %>
 
    <section class="mb-5">
      <div class="container">
        <div class="col-md-6 mx-auto">
          <div class="row">
              <h5 style="font-weight:bold" class="mx-2 my-3">이메일 찾기</h5>
          </div>
          <div id="findemail_hidden" style="display: none">
              <p style="font-weight:400" class="mx-2 my-1">입력하신 정보에 의한 결과는 아래와 같습니다</p>
              <p style="font-weight:400" class="mx-2 mt-3 mb-5" id="findemail_result"></p>
          </div>
          <div id="findemail_show">
            <div class="row"> 
              <p style="font-weight:400" class="mx-2 mb-0"><i class="fas fa-minus"></i>&nbsp; 성함과 가입 시 등록한 전화번호를 입력하세요</p>
            </div>
            <div class="row">
              <p style="font-weight:400" class="mx-2 my-2"><i class="fas fa-minus"></i>&nbsp; 정확한 정보를 입력해야 확인이 가능합니다</p>
            </div>
          </div>
          <form name="emailForm" id="emailForm" action="/auth/findemail" method="GET">
            <div class="form-group">
              <label for="emailForm_name">이름</label>
              <input type="text" class="form-control" id="emailForm_name" 
                  placeholder="이름을 입력하세요" name="emailForm_name" required>
              <small id="emailForm_name_result" class="result_txt form-text text-muted"></small>
            </div>
            <div class="form-group">
              <label for="emailForm_tel">전화번호</label>
              <input type="text" class="form-control" id="emailForm_tel" 
                  placeholder="전화번호를 입력하세요" name="emailForm_tel" required>
              <small id="emailForm_tel_result" class="result_txt form-text text-muted"></small>
            </div>
            <div class="form-group text-center mt-5 mb-3">
              <button type="button" class="btn btn-outline-secondary" onclick="emailForm_ck()">이메일 찾기</button>
            </div>
          </form>
          <div class="row d-flex justify-content-center">
            <a href="/login" class="mr-2">로그인하기</a>
            <a href="/findpwd">비밀번호 찾기</a>
          </div>
        </div>
      </div>
    </section>
    

